<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header: Keranjang dan Search -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/background_card"
            android:elevation="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/keranjang"
                android:contentDescription="Keranjang"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Cari produk..."
                android:padding="12dp"
                android:background="?attr/editTextBackground"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:singleLine="true"
                android:imeOptions="actionSearch" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/nggolek" />

        </LinearLayout>

        <!-- Middle Content: Kategori Scroll dan Display Barang -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Scroll Horizontal untuk Kategori -->
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:paddingVertical="12dp"
                    android:background="@color/background_card"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:id="@+id/categoryContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CPU"
                            android:layout_marginEnd="8dp"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipGpu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GPU"
                            android:layout_marginEnd="8dp"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Case"
                            android:layout_marginEnd="8dp"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSsd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SSD"
                            android:layout_marginEnd="8dp"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRam"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RAM"
                            android:layout_marginEnd="8dp"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPsu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PSU"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice" />

                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Grid untuk Display Barang -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:clipToPadding="false"
                    tools:listitem="@layout/item_product" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Footer: Belanja, Pesanan, Profil -->
        <LinearLayout
            android:id="@+id/footerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_card"
            android:elevation="8dp"
            android:paddingVertical="12dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/layoutBelanja"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_view"
                    android:contentDescription="Belanja"
                    android:tint="@color/primary_blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Belanja"
                    android:textSize="12sp"
                    android:textColor="@color/primary_blue"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPesanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    android:contentDescription="Pesanan"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesanan"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutProfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_myplaces"
                    android:contentDescription="Profil"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
